<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/chathead_layout_include"
              android:orientation="horizontal"
              android:background="@drawable/chathead_bg"
              android:layout_width="200dp"
              android:layout_height="50dp"
              android:layout_gravity="end|top">
    <TextView
            android:id="@+id/chathead_text"
            android:layout_width="130dp" android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/text_notify"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorHighlight"/>
    <ImageView
            android:id="@+id/chathead_icon"
            android:layout_width="70dp" android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerInside"/>
</LinearLayout>
